= simple_form_for coupon do |f|
  = f.error_notification
  = f.input :name
  = f.input :day, input_html: { :class => :datepicker }
  = f.input :content, input_html: {rows: 10}
  = f.input :comment, input_html: {rows: 10}
  = f.input :code_url, input_html: {rows: 1}
  = f.input :uid, input_html: {rows: 1}
  = f.input :usable
  = f.input :used
  = f.input :enabled
  .actions
    = f.submit